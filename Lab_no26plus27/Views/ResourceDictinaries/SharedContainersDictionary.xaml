<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SharedTabPanel" TargetType="TabPanel">
        <Style.Setters>
            <Setter Property="Height" Value="380" />
            <Setter Property="Width" Value="795" />
        </Style.Setters>
    </Style>
    <Style x:Key="EntitiesListView" TargetType="ListView">
        <Style.Setters>
            <Setter Property="Grid.Row" Value="1" />
            <Setter Property="Grid.Column" Value="0" />
            <Setter Property="Width" Value="500" />
        </Style.Setters>
    </Style>
    <Style x:Key="EntityOptionsGrid" TargetType="Grid">
        <Style.Setters>
            <Setter Property="Grid.Row" Value="0" />
            <Setter Property="Grid.Column" Value="1" />
            <Setter Property="Width" Value="270" />
            <Setter Property="Height" Value="160" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style.Setters>
    </Style>
</ResourceDictionary>